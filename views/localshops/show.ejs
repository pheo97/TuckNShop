<% layout('layouts/boilerplate') %> 
<div class="row">
    <div class="col-6 ">
        <div class="card">
            <img src="<%= localshop.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"> <%= localshop.shopName %> </h5>
              <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted"><%= localshop.location %> </li>
              <li class="list-group-item">Owner: <%= localshop.author.username %> </li>
              <li class="list-group-item"><%= localshop.description %></li>
              <li class="list-group-item">R<%= localshop.price %></li>
            </ul>
            <% if(currentUser && localshop.author.equals(currentUser._id)){ %> 
            <div class="card-body">
              <a href="/localshops/<%= localshop._id %>/edit" class="card-link btn btn-info">Edit Store</a>
              <form class="d-inline" action="/localshops/<%=localshop._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger">DELETE</button>
            </form>
            </div>
            <% } %> 
          </div>
    </div>
    <div class="col-6">

      <% if(currentUser){ %> 
      <h2>Leave A Review</h2>
          <form action="/localshops/<%=localshop._id%>/reviews" method="POST" class="mt-3 validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="rating" >Rating</label>
              <input type="range" class="form-range" min="1" max="5" name="review[rating]" id="rating">
            </div>
              <div class="mb-3">
                <label class="form-label" for="body">Review</label>
                <textarea name="review[body]" id="body" cols="30" rows="3" class="form-control" required></textarea>
                <div class="valid-feedback"> Looks good! </div>
              </div>
              <button class="btn btn-success">Submit</button>
          </form>
          <% } %> 

          <% for(let review of localshop.reviews) { %> 
            <div class="card mb-3 mt-3">
              <div class="card-body">
                <h5 class="card-title"> Rating: <%= review.rating %> </h5>
                <h6 class="card-subtitle mb-2 text-muted">Review by: <%= review.author.username %> </h6>
                <p class="card-text">Review: <%= review.body %></p>

                <% if(currentUser && review.author.equals(currentUser._id)){ %> 
                <form action="/localshops/<%=localshop._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                  <button class="btn btn-sm btn-danger">Delete</button>
                </form>
                <% } %> 

              </div>
            </div>
          <% } %>
    </div>
    <a href="/localshops" class="card-link btn btn-primary">Back to LocalShops</a>
</div>

