    <% layout('layouts/boilerplate') %> 
    <div id="map" style="width:100% ; height:500px"></div>
    <div class="container"></div>
    <h1>all shops</h1>
    <a href="/localshops/new">Create New local shop</a>
    <ul>
        <% for(let localshop of localshops){ %>
            <div class="card">
            <div class="row">
                <div class="col-md-4">
                    <% if(localshop.images.length){ %> 
                    <img src="<%= localshop.images[1].url %> " alt="" class="img-fluid">
                    <% }else{ %> 
                        <img src=" " alt="" class="img-fluid">
                        <% } %> 
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= localshop.shopName %>  </h5>
                        <p class="card-text"><%= localshop.description %> </p>
                        <p class="text-muted"><small><%= localshop.location %></small> </p>
                        <a class="btn btn-primary" href="/localshops/<%=localshop._id%>">View <%= localshop.shopName %> </a>
                    </div>
                </div>
            </div>
            </div>
        <% } %> 
    </ul>
    <script>
        const mapToken = '<%- process.env.MAPBOX_TOKEN%>'
        const localshops = {features : <%- JSON.stringify(localshops) %>}
    </script>
    <script src="/javascripts/clusterMap.js"></script>
    
