<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Store</h1>
    <div class="col-6 offset-3">
        <form action="/localshops/<%= localshop._id %>?_method=PUT " method="POST">
            <div class="mb-3">
                <label class="form-label" for="shopName">ShopName</label>
                <input class="form-control" type="text" id="shopName" name="localshop[shopName]" value="<%= localshop.shopName %> ">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="localshop[location]" value="<%= localshop.location %> ">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="localshop[image]" value="<%= localshop.image %> ">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price">R</span>
                    <input type="text" class="form-control" placeholder="0.00"
                     aria-label="price" aria-describedby="price" name="localshop[price]" value="<%= localshop.price %> ">
                </div>    
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="localshop[description]">
                    <%=localshop.description %> 
                </textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Update</button>
            </div>
        </form>
    </div>
    <a class="btn btn-primary" href="/localshops/<%=localshop._id %>">back to localshop</a>
</div>
    
